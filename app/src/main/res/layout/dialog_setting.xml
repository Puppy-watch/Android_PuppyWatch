<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="@drawable/dialog_background"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/dialog_setting_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="강아지 정보 수정하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_setting_content_tv"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

    <android.widget.Button
        android:layout_width="120dp"
        android:id="@+id/setting_yes_btn"
        android:layout_height="wrap_content"
        android:text="네"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/sign_btn_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_setting_content_tv"/>

    <android.widget.Button
        android:layout_width="120dp"
        android:id="@+id/setting_no_btn"
        android:layout_height="wrap_content"
        android:text="아니요"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/sign_btn_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_setting_content_tv"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>