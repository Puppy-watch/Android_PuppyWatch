<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/board_list_item_cv"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/light_gray">

    <LinearLayout
        android:id="@+id/board_behaviod_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingStart="17dp"
        android:paddingEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/board_behavior_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2023.01.02 13:00:12 - 이상행동"
            android:font="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/board_behavior_item_new_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new"
            android:font="@font/roboto_bold"
            android:textColor="@color/red"
            android:textSize="17sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>